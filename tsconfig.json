{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "dom",
    ],
    "jsx": "react",
    "resolveJsonModule": true,
    "target": "es5",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./src",
    "./scripts",
    "./__tests__"
  ]
}